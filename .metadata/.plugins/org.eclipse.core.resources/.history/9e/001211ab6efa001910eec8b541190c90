package run;

public class PrimitivesNumerics {

	public static void main(String[] args) {
	
		// Integers
		
		byte byteNumPos = 127;
		byte byteNumNeg = -128;
		
		
		short shortNumPos = 32767;
		short shortNumNeg = -32768;
		
		
		int intNumPos = 2147483647;
		int intNumNeg = -2147483648;
		
//		long notGood = 9223372036854775807;
		
		long longNumPos = 9223372036854775807L;
		long longNumNeg = -9223372036854775808L;
		
		
		// Decimals
		// 1.314E+1  means  1.314 * (10 power of 1)  which is 13.14.
		
		double doubleNumPos = 1.7976931348623157E308;
		double doubleNumNeg = 4.9E-324;
		
		float floatNumPos = 3.4028235E38F; 
		float floatNumNeg = 1.4E-45F;
		
		
	}
}
